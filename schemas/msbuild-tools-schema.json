{
    "description": "msbuild-tools configuration",

    "definitions": {
        "task": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "program": {
                    "type": "string"
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "cwd": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "program",
                "args",
                "cwd"
            ]
        },
        "variables": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z0-9_]+$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "tasks": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/task"
            }
        }
    },

    "type": "object",
    "properties": {
        "solution": {
            "type": "string",
            "description": "path to solution file"
        },
        "verbosity": {
            "type": "string",
            "enum": ["quiet", "minimal", "normal", "detailed", "diagnostic"]
        },
        "preBuildTasks": {
            "$ref": "#/definitions/tasks"
        },
        "postBuildTasks": {
            "$ref": "#/definitions/tasks"
        },
        "buildConfigurations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "platformConfigurations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "targetConfigurations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "debugConfigurations": {
            "allOf": [
                {
                    "$ref": "#/definitions/tasks"
                },
                {
                    "properties": {
                        "projectName": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "variables": {
            "$ref": "#/definitions/variables"
        },
        "env": {
            "$ref": "#/definitions/variables"
        }
    },
    "required": [
        "solution"
    ]
}
